{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "target": "es2019",
    "skipLibCheck": true
  },
  "exclude": ["**/*.test.ts", "**/lib"]
}
